    <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

    <form action="/inv/add-classification" method="post">
        <span></span>
        <label for="classification_name">Name: </label><input type="text" name="classification_name" id="classification_name">
        <button type="submit">Add Classification</button>
    </form>

</section>