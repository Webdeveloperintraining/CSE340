<section>
  <% if (title) { %>
    <h1><%= title %></h1>

  <% } else {
      res.redirect('/')
    } %>
        
        <%- messages() %>
        <% if (errors) { %>
          <ul class="notice">
         <% errors.array().forEach(error => { %>
           <li><%= error.msg %></li>
        <%  }) %>
         </ul>
        <% } %>


      <h2>Welcome <%= locals.accountData.account_firstname %></h2>
      <p>You're logged in</p>
      <p><a href="/account/update/<%-locals.accountData.account_id%>"> Edit account Information</a></p>

  <% if (locals.accountData.account_type !=='Client') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Inventory Management</a></p>
  <% } %>
</section>
<style> 
    h1,h2{text-align: center;} 
</style> 
